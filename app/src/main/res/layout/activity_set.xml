<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/valeurs"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/valeurs"
        android:layout_marginTop="80dp"
        android:text="Paramétrage" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/valeurs"
        android:layout_marginTop="123dp"
        android:text="Température" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/valeurs"
        android:layout_marginTop="162dp"
        android:text="Min" />

    <EditText
        android:id="@+id/tempMin"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginTop="-17dp"
        android:ems="10"
        android:inputType="numberDecimal" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:text="Max" />


    <EditText
        android:id="@+id/tempMax"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/save"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginTop="-17dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/hum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/valeurs"
        android:layout_marginTop="216dp"
        android:text="Humidité" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/hum"
        android:layout_marginBottom="233dp"
        android:text="Min" />

    <EditText
        android:id="@+id/humMin"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignTop="@+id/textView12"
        android:layout_marginTop="-17dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignTop="@+id/textView12"
        android:text="Max" />

    <EditText
        android:id="@+id/humMax"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tempMax"
        android:layout_alignTop="@+id/textView13"
        android:layout_marginTop="-17dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/batt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/valeurs"
        android:layout_marginBottom="179dp"
        android:text="Niveau de la batterie" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginBottom="136dp"
        android:text="Min" />

    <EditText
        android:id="@+id/battMin"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignEnd="@+id/textView5"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:text="Max" />

    <EditText
        android:id="@+id/battMax"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignStart="@+id/tempMax"
        android:ems="10"
        android:inputType="number" />


    <TextView
        android:id="@+id/gsm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginBottom="81dp"
        android:text="GSM en cas d'alerte :" />

    <EditText
        android:id="@+id/numero"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gsm"
        android:layout_marginTop="-18dp"
        android:layout_toEndOf="@+id/textView13"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Enregistrer" />

</RelativeLayout>